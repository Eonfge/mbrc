<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:mbrc="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.viewpagerindicator.TitlePageIndicator
            android:id="@+id/search_categories"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textColor="#ffdcdcdc"
            mbrc:footerColor="#CCFFDC14"
            mbrc:footerLineHeight="1dp"
            mbrc:footerIndicatorHeight="3dp"
            mbrc:footerIndicatorStyle="underline"
            mbrc:selectedColor="#ffffffff"
            mbrc:selectedBold="true"
            android:background="#101010"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/search_pager"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_control_height"
            android:name="com.kelsos.mbrc.ui.fragments.MiniControlFragment"
            android:layout="@layout/ui_fragment_mini_control"
            tools:layout="@layout/ui_fragment_mini_control"
            />

</LinearLayout>